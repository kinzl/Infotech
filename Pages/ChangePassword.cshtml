@page
@model Questionnaire_Frontend.Pages.ChangePassword

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>ChangePassword</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
    <link href="resources/css/axure_rp_page.css" type="text/css" rel="stylesheet"/>
    <link href="data/styles.css" type="text/css" rel="stylesheet"/>
    <link href="files/changepassword/styles.css" type="text/css" rel="stylesheet"/>
</head>
<body>
<div id="base" class="">

    <div>
        <form method="post" asp-page-handler="ChangePassword">
            <label id="oldPasswordLabel" for="oldPassword">Old Password:</label>
            <input id="oldPassword" type="text" name="username"/>
            <label id="newPasswordLabel" for="newPassword">New Password:</label>
            <input id="newPassword" type="password" name="password"/>
            <label id="newPasswordRepeatLabel" for="newPasswordRepeat">Repeat New Password:</label>
            <input id="newPasswordRepeat" type="password" name="password"/>
            <div id="errorText">@Model.ErrorText</div>
            <input id="applyButton" type="submit" value="Apply"/>
        </form>
    </div>

    <!-- Infotech Logo -->
    <div id="u13" class="ax_default image">
        <img id="u13_img" class="img " src="images/mainwindow/u4.png"/>
        <div id="u13_text" class="text " style="display:none; visibility: hidden">
            <p></p>
        </div>
    </div>

    <button id="backButton">
        <a asp-page-handler="RedirectMainWindow">Back</a>
    </button>
</div>
</body>
</html>